<center>
	<h2> Users </h2>
</center>
<div class = 'container'>

<table class='table table-hover'>
		
<thead>
		<th>First Name</th>
		<th> Last Name </th>
		<th> Email </th>
		<th> Phone Number </th>
		<th> Options </th>
</thead>
<tbody>
	<% @users.each do |user| %>
	<tr>
	<td><%= user.first_name %></td>
	<td><%= user.last_name %></td>
	<td><%= user.email %></td>
	<td><%= user.country_code %> <%= user.phone_number %></td>
	<td><%= link_to 'View', user %>    <%= link_to 'Edit', edit_user_path(user) %>     <%= link_to 'Delete', user,  method: :delete, data: {confirm: 'Are You Sure?'}%> </td>
	</tr>
	<%end%>
</tbody>
</table>

</div>